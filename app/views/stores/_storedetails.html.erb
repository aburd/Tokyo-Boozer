<%- model_class = Store -%>

<div class="panel panel-default">
    <div class="panel-heading">
      <h1 class="panel-title"><%= @store.name %></h1>
    </div> <!--/panel heading-->
    <div class="panel-content">
      <div title="description">
        <strong><%= model_class.human_attribute_name(:description) %>:</strong><br />
        <%= @store.description %><br />
      </div>
      <div title="URL">
        <strong>URL:</strong><br />
        <a href="<%= @store.web_address %>"><%= @store.web_address %></a><br />
      </div>
      <div title="phone number">
        <strong>Phone:</strong><br />
        <%= @store.phone_number %><br />
      </div>
      <div title="picture">
        <%= image_tag @store.picture.url(:thumb) %>
      </div>
    </div> <!--/panel content-->
</div> <!--/panel-->

<!--Start buttons-->
<%= link_to t('.back', :default => t("helpers.links.back")),
              stores_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_store_path(@store), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              store_path(@store),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
